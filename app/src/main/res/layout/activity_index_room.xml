<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".Activitys.IndexRoomActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_radius"
        android:orientation="horizontal"
        android:padding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/llBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back1111" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgLove"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mess" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:padding="20dp">

                <ImageView
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_room"
                    android:id="@+id/imgBook"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/bottom_radius"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/txt_name_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandregular"
                    android:text="Tên phòng"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/txt_price_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/quicksandregular"
                    android:text="Giá thuê"
                    android:textSize="15sp"
                    android:textStyle="italic" />
                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/txtTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/quicksandregular"
                    android:text="Số điện thoại người thuê"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2.5dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_cre_deal"
                        android:background="@drawable/bottom_radius"
                        android:layout_marginRight="5dp"
                        android:elevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_cre_hd" />
                        <TextView
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tạo hợp đồng"
                            android:textSize="15sp"
                            android:fontFamily="@font/quicksandmedium"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:elevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        android:background="@drawable/bottom_radius">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_error_404" />
                        <TextView
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Huỷ hợp đồng"
                            android:textSize="15sp"
                            android:fontFamily="@font/quicksandmedium"/>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="5dp"
                        android:elevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_radius"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="1dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_cre" />
                        <TextView
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chi tiết hợp đồng"
                            android:textSize="15sp"
                            android:fontFamily="@font/quicksandmedium"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2.5dp">
                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="5dp"
                        android:elevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_radius"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_delete" />
                        <TextView
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xoá phòng"
                            android:textSize="15sp"
                            android:fontFamily="@font/quicksandmedium"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:elevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_radius"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_setting_circle" />
                        <TextView
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sửa phòng"
                            android:textSize="15sp"
                            android:fontFamily="@font/quicksandmedium"/>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="5dp"
                        android:elevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_radius"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_megaphone" />
                        <TextView
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thông báo"
                            android:textSize="15sp"
                            android:fontFamily="@font/quicksandmedium"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>